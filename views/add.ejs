<% include header %>

<h2>New Message</h2>
<form method="post" role="form">
  <div class="form-group">
    <label for="body"></label>
    <textarea class="form-control" name="message" placeholder="Write a message!" rows="3" id="body" required></textarea>
  </div>
  <div class="form-group">
    <label for="name">From</label>
    <input class="form-control" type="text" name="name" placeholder="Name" id="title" required>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Post</button
  </div>
</form>
<% include footer %>
